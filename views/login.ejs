<div class="row">
    <div class="card">
        <div class="card-body">
    <h2>Log In</h2> 
    <div class="col-lg-12"> 

        <li class="err"><%= message.error %></li>
        <form action="/login" method="POST">
            <div class="form-group">
        <label for="">Email</label>
        <input type="email" class="form-control" name="username">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password">
             </div>
        <button type="submit" class="btn">Log In</button><a class="forgetPassword" href="">Forget your password?</a>
        <h2>Or</h2>
        </form>
    </div>

<div class="col-lg-12">
    <div class="btn btn-social btn-google">
    <i class="fab fa-google"></i><a class="social" href="/auth/google">LogIn with Google</a></div>
<button class="btn btn-social btn-facebook"><i class="fab fa-facebook"></i><a class="social" href="/auth/facebook">LogIn with Facebook</a> </button></div>
